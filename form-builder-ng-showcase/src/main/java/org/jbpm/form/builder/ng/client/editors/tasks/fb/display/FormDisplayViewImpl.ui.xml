<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <ui:with field="i18n" type="org.jbpm.form.builder.ng.client.i18n.Constants"/>
    <ui:with field='resources' type='org.jbpm.form.builder.ng.client.resources.ShowcaseResources'/>
    
 
    <b:WellForm type="HORIZONTAL">
       
        <b:Fieldset>
            <b:ControlGroup>
                <b:ControlLabel for="taskId">Task Id</b:ControlLabel> 
                <b:Controls>
                    <b:TextBox
                        ui:field='taskIdText' b:id="taskId" placeholder="task id">
                    </b:TextBox>
                </b:Controls>        
            </b:ControlGroup>
            <b:ControlGroup>
                <b:ControlLabel for="userId">User</b:ControlLabel> 
                <b:Controls>
                    <b:TextBox
                        ui:field='userIdText' b:id="userId" placeholder="user (mock)">
                    </b:TextBox>
                </b:Controls>        
            </b:ControlGroup>
            <b:ControlGroup>
                <b:Controls>
                    <b:Button  ui:field="renderButton" size="SMALL" type="PRIMARY">Render Form</b:Button>   
                </b:Controls>
            </b:ControlGroup>
            <gwt:ScrollPanel  ui:field="scrollPanel">
                <b:FluidContainer ui:field="formView">
                
                </b:FluidContainer>
                
            </gwt:ScrollPanel>
       
            
        </b:Fieldset>
        
    </b:WellForm>
             
               
           
      
</ui:UiBinder>